{{#each results}}
	<form action="/" method="post">
		<input type="hidden" name="id" value="{{this.id}}">
            
		<label for="name">Name of Exercise:</label>
		<input id="name" type="text" name="name" value="{{this.name}}">
		
		<label for="reps">Number of Reps:</label>
		<input id="reps" type="text" name="reps" value={{this.reps}}>

		<label for="weight">Weight:</label>
		<input id="weight" type="text" name="weight" value={{this.weight}}>

		<label for="date">Date:</label>
		<input id="date" type="text" name="date" value={{this.dateOccured}}>

		{{#if this.lbs}}
			<input type="radio" name="lbs" value=1 checked>lbs
		    <input type="radio" name="lbs" value=0>kg<br>
		{{/if}}
		
		<input type="submit" name="newUpdate">
	</form>
{{/each}}
